<!DOCTTYPE html>
<html>
    include header.pug
    
    <body>
        <div class="container-fluid" id="index">
            include top.pug

            <div class="container white-background text-center">
                <div class="row text-center" style="padding-top:10vh;padding-bottom:30vh">
                    -for(var i=0;i<mails.length;i++)
                        <div class="col-sm-4">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    h5(class="card-title")= mails[i].name
                                </div>
                    
                                <div class="card-body">
                                    form(class="ui form" action=`/admin-${mails[i]._id}` method="post" enctype="multipart/form-data")
                                        button(type="submit" style="color:black!important" class="card-link")= "Edit"
                                    button(data-toggle="modal" data-target=`#exampleModal${i}` style="color:black!important" class="card-link")= "Delete"
                                </div>
                            </div>
                        </div>
                        -deleteModal(`/mail/delete/${mails[i]._id}`,i)
                        <br/><br/>
                </div>
            </div>
        </div>

        include footer.pug


        -function deleteModal(link,Sno)
            include deleteModal.pug